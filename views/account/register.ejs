<html>
<head>
    <style>
        th{
        background-color:rgb(210, 232, 234);
        padding: 20px 0;
        }
        td{
        padding:30px;
        border:1px solid rgb(210,232,234);
        }
        table{
        border:1px solid rgb(210, 232, 234);
        }
        input[type="button"]{
        text-decoration: none;
        color:black;
        background-color: rgb(210, 232, 234);
        border:none;
        }
        input[type="submit"]{
        font-size: 15px;
        border:none;
        padding:10px 30px;
        margin-top:5px;
        margin-bottom:20px;
        color:black;
        background-color: rgb(210, 232, 234);
        }
        input[type="reset"]{
        font-size: 15px;
        border:none;
        padding:10px 30px;
        margin-top:5px;
        margin-bottom:20px;
        color:black;
        background-color: rgb(210, 232, 234);
        }
        center{
        margin:30px 0;
        }
        </style>
        <script type="text/javascript">
            function idCheck(id){
                if(id == ""){
                    alert("아이디를 확인해주세요.");
                    document.regForm.idx.focus();
                }else{
                    url="idChk.jsp?idx=" + id;
                    window.open(url,"post","width=300,height=150");
                }
            }
            
            function passCheck(ps, psch){
                if(ps != psch){
                    alert("패스워드를 다시 확인해주세요.");
                    document.regForm.passwd.focus();
                }else{
                    alert("패스워드가 일치합니다.")
                }
            }
    </script>
</head>
<body>
    <div>
        <% include ../top.ejs %>
    </div>
    <form method="post" action="/account/register">
        <div className="register_content" style="width:100%;">
            <div style="margin: 0 auto; display: inline;">
                <table width="960px" height="550px" style="margin:30px auto;">
                    <form action="newmemberProcess.jsp" method="get" name="regForm">
                        <tr>
                            <td colspan="2">
                                <h2>회원정보입력</h2>
                            </td>
                        </tr>
                        <tr>
                            <th>아이디</th>
                            <td>
                            <input type="text" name="userid" size="35" required/>
                            </td>
                        </tr>
                        <tr>
                            <th>비밀번호</th>
                            <td>
                                <input type="password" name="password" size="35" required/>
                            </td>
                        </tr>
                        <tr>
                            <th>한글이름</th>
                            <td>
                                <input type="text" name="koName" size="35"/>
                            </td>
                        </tr>
                        <tr>
                            <th>영문이름</th>
                            <td>
                                <input type="text" name="enName" size="20"/>
                            </td>
                        </tr>
                        <tr>
                            <th>생년월일</th>
                            <td>
                                <input type="date" name="birthDay"/>
                            </td>
                        </tr>
                        <tr>
                            <th>이메일</th>
                            <td>
                                <input type="email" name="email"/>
                            </td>
                        </tr>
                        <tr>
                            <th>핸드폰</th>
                            <td>
                                <input type="text" name="phone" size="12"/>
                            </td>
                        </tr>
                        <tr>
                            <td align="center" colspan="2">
                                <input type="submit" value="확인" />
                                <input type="reset" value="취소"/>
                            </td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </form>
    <footer>
		<div>
			<% include ../bottom.ejs %>
		</div>
	</footer>
</body>
</html>